<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/fondoPrincipal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:padding="20dp"
        android:textAlignment="center"
        android:background="@color/colorButton2"
        android:textColor="#fff"
        android:textSize="15sp"
        android:id="@+id/tvSolicitante"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:scrollbars="none">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <TableLayout
                android:id="@+id/tabla"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:shrinkColumns="6"
                android:stretchColumns="6">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@color/colorPrimaryDark">

                    <TextView
                        android:id="@+id/tvCuota"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Cuota"
                        android:padding="25dp"
                        android:textColor="@color/fondoPrincipal"/>

                    <TextView
                        android:id="@+id/tvCapital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="25dp"
                        android:text="Capital"
                        android:textColor="@color/fondoPrincipal"/>

                    <TextView
                        android:id="@+id/tvAmortizacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="25dp"
                        android:text="Amortización"
                        android:textColor="@color/fondoPrincipal"/>

                    <TextView
                        android:id="@+id/tvIntereses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="25dp"
                        android:text="Interés"
                        android:textColor="@color/fondoPrincipal"/>

                    <TextView
                        android:id="@+id/tvPago"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="25dp"
                        android:text="Pago"
                        android:textColor="@color/fondoPrincipal"/>

                    <TextView
                        android:id="@+id/tvFecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="25dp"
                        android:text="Fecha"
                        android:textColor="@color/fondoPrincipal"/>
                </TableRow>
            </TableLayout>
        </ScrollView>
    </HorizontalScrollView>
</LinearLayout>